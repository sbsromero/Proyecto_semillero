{% extends 'layout/layout.html.twig' %}

{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="{{ asset('public/css/loginAdmin.css') }}" />
{% endblock %}

{% block body %}
<div class="container" style="margin-top:150px">
  <form action="{{ path('adminLogin_check')}}" method="post" align="center" class="form-signin">
    <div class="rowContainer" align="center">
      <div class="row" style="margin:0px">
        <div class="col-md-5">
          <img src="{{asset('public/images/icon_login.jpg')}}" alt="icon_login" style="height:80px">
        </div>
        <div class="col-md-7 text-login">
          Inicio de sesión
        </div>
      </div>
      {% if error %}
      <div class="">
        <p style="margin:0px;color:#a94442">
          <strong>
            {{error.messageKey | trans}}
          </strong>
        </p>
      </div>
      {% endif %}
      <div class="input-login">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-envelope"></i>
        </span>
        <input class="form-control" type="text" id="username" name="_username" value="{{last_username}}" placeholder="username" required>
      </div>
      <div class="input-login">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-lock"></i>
        </span>
        <input class="form-control" type="password" id="password" name="_password" placeholder="contraseña" required>
      </div>
      <input type="hidden" name="_target_path" value="homeAdmin" />
      <div align="center" class="" style="margin-top:15px; padding-bottom:15px">
        <div>
          <button type="submit" class="btn btn-primary" style="border-radius:10px">{{ 'INICIAR SESIÓN'|trans }}</button>
        </div>
      </div>
    </div>
  </form>
</div>

{% endblock %}
