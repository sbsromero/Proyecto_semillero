{% extends 'AdminBundle:Layout:layoutAdmin.html.twig' %}
{% block body %}
{{ parent() }}
<div class="container">
{% embed "AdminBundle:Shared:navBarAdmin.html.twig" %}
{% block tab_parametros %}active{% endblock %}
{% endembed %}
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row" style="margin:0px;margin-bottom:20px">
      <div class="col-md-9">
        <div class="form-group form-inline">
          <i class="glyphicon glyphicon-search"></i>
          <input type="text" id="queryBusquedaSegmento" name="" value="" class="form-control">
          <a class="btn btn-default btnMostrarSegmentos" style="border-radius:20px">Mostrar todos</a>
        </div>
      </div>
      <div class="col-md-3" align="right">
        <a href="{{path('addSegmento')}}" class="btn btn-default">Agregar Segmento</a>
      </div>
    </div>
    <div class="row" style="margin:0px">
      <div class="table-responsive" id="tabla_segmentos" data-pageCount="{#{pageCount}#}">
        {#% if pagination | length %#}
        <table id="tableItemsSegmentos" class="table table-striped table-border table-hover table-responsive tablesorter" style="font-size:14px">
          <thead style="background-color:#f8f8f8">
            <tr>
              <th rowspan="2" style="font-size:14px;text-align: center">Numero segmento</th>
              <th rowspan="2" style="text-align:center;font-size:14px;text-align: center"> Semestre</th>
              <th rowspan="1" colspan="1" style="text-align:center;font-size:14px;text-align: center">Acciones</th>
            </tr>
            <tr>
              <th rowspan="1" style="text-align:center;font-size:14px">Estado</th>
            </tr>
          </thead>
        </table>
        {#% endif %#}
      </div>
    </div>
  </div>
</div>
{% endblock %}
