<div class="panel panel-default">
  <div class="panel-body">
    <div class="row" style="margin:0px;padding-right: 30px;padding-top: 20px;">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    </div>
    <div class="row" style="margin:0px">
      <div class="page-header" align="center">
        <h3>Asignar mentor</h3>
        <div id="nombreGrupo" data-idGrupo="{{grupo.getId()}}">
          <h4>Nombre del grupo: {{grupo.getNombre()}}</h4>
        </div>
      </div>
    </div>
    {% if mentores | length %}
    <div class="row" style="margin:0px">
      <div class="table-responsive" id="tablaMentores" data-pagecount="{{pageCount}}">
        <table class="table table-striped table-border table-hover table-responsive">
          <thead>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th style="text-align:center">Asignar</th>
          </thead>
          {% for mentor in mentores %}
          <tbody>
            <tr data-id="{{mentor.getId()}}">
              <td>{{mentor.getNombre()}}</td>
              <td>{{mentor.getApellidos()}}</td>
              <td align="center">
                <span data-toggle="tooltip" data-original-title="Asignar mentor">
                  <a class="btn btn-sm checkAsignarMentor">
                    <span>
                      <i class="glyphicon glyphicon-unchecked"></i>
                    </span>
                  </a>
                </span>
              </td>
            </tr>
          </tbody>
          {% endfor %}
        </table>
      </div>
      <div align="center">
        <ul id="paginationMentores" class="pagination-sm"></ul>
      </div>
    </div>
    {% else %}
      <h3>No se encontraron resultados</h3>
    {% endif %}
  </div>
</div>
