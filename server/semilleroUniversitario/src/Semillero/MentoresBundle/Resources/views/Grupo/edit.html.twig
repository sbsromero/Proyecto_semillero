{% extends 'AdminBundle:Layout:layoutAdmin.html.twig' %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('public/css/bootstrap-datepicker.min.css')}}">
{% endblock %}
{% block body %}
{{ parent() }}

	<div class="container">
    {% embed "AdminBundle:Shared:navBarAdmin.html.twig" %}
    {% block tab_mentores %}active{% endblock %}
    {% endembed %}

		<div class="panel panel-default">
			<div class="panel-body">
				<div class="row" style="margin:0px">
					<div class="page-header" align="center">
						<h3>Edici√≥n de Grupo</h3>
					</div>
				</div>
        {{ form_start(form, { 'attr' : {'novalidate': 'novalidate','role' : 'form'} }) }}
			<div class="row" style="margin:0px">
				<div class="col-md-6">

					<div class="form-group">
							{{ form_label(form.diplomado) }}
							{{ form_widget(form.diplomado, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Nuevo Diplomado'} }) }}
							<span class="text-danger">{{ form_errors(form.diplomado) }}</span>
					</div>

          <div class="form-group">
              {{ form_label(form.nombre) }}
              {{ form_widget(form.nombre, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Nuevo nombre'} }) }}
              <span class="text-danger">{{ form_errors(form.nombre) }}</span>
          </div>

          <div class="form-group">
			        {{ form_label(form.jornada) }}
			        {{ form_widget(form.jornada, {'attr': {'class': 'form-control', 'placeholder' : 'Jornada'}}) }}
			        <span class="text-danger">{{ form_errors(form.jornada) }}</span>
          </div>

          <div class="form-group">
              {{ form_label(form.mentor) }}
              {{ form_widget(form.mentor, {'attr': {'class': 'form-control', 'placeholder' : 'Mentor'}}) }}
              <span class="text-danger">{{ form_errors(form.mentor) }}</span>
          </div>

          <div class="checkbox">
				    <label>
						{{ form_widget(form.activo) }}Activo
						<span class="text-danger">{{ form_errors(form.activo) }}</span>
				    </label>
				  </div>
			</div>
		</div>
		<p aling="center">
				{{ form_widget(form.save, {'label' : 'Actualizar Grupo', 'attr': {'class': 'btn btn-success'}}) }}
		</p>
		  {{ form_end(form) }}
	</div>
 </div>
</div>
{% endblock %}
{% block javascript %}
  {{parent()}}
  <script src="{{asset('public/js/grupo.js')}}"></script>
  <script src="{{asset('public/js/bootstrap-datepicker.min.js')}}"></script>
  <script src="{{asset('public/js/bootstrap-datepicker.es.min.js')}}" charset="UTF-8"></script>
{% endblock %}
