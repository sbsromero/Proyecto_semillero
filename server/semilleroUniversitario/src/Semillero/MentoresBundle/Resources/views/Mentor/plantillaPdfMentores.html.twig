<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- <link rel="stylesheet" href="/public/css/bootstrap.min.css" /> -->
  <!-- <link rel="stylesheet" href="/public/css/main.css" /> -->
  <link rel="stylesheet" href="{{ base_dir ~ asset('public/css/bootstrap.min.css') }}">
</head>
<body>
  <div class="container">
    <div class="row page-header" align="center">
      <div class="col-md-12">
        <img alt="logoSemillero" style="height:130px; padding:10px" src="{{base_dir ~ asset('public/images/logoSemilleroUniversitario.png')}}">
      </div>
    </div>
    <div class="row">
      {% if mentores | length %}
      <div class="table-responsive">
        <table class="table table-striped table-border table-hover table-responsive">
          <thead>
            <tr>
              <th></th>
              <th>Nombres</th>
              <th>Apellidos</th>
              <th>Documento</th>
              <th>Tipo mentor</th>
              <th>Estado</th>
            </tr>
          </thead>
          {% for mentor in mentores %}
          <tbody>
            <tr>
              <td>{{loop.index}}</td>
              <td>{{mentor.getNombre()}}</td>
              <td>{{mentor.getApellidos()}}</td>
              <td>{{mentor.getNumeroDocumento()}}</td>
              <td>{{mentor.getTipoMentor().getNombre()}}</td>
              <td>
                {% if mentor.getActivo() %}
                  Activo
                {% else %}
                  Inactivo
                {% endif %}
            </td>
            </tr>
          </tbody>
          {% endfor %}
        </table>
      </div>
      {% endif %}
    </div>
  </div>
</body>
