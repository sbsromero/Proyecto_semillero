{% extends 'layout/layout.html.twig' %}

{% block body %}

{{ parent() }}
	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">Mentores</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
                <th>Nombres</th>
								<th>Apellidos</th>
                <th>Tipo De Documento</th>
                <th>Número De Documento</th>
                <th>Fecha De Nacimiento</th>
								<th>Número Celular</th>
								<th>Tipo De Mentor</th>
								<th>Estado</th>
								<th>Acción</th>
						</tr>
					</thead>
					<tbody>
            {% for mentor in Mentor %}
              <tr>
                <td>{{ mentor.nombres}}</td>
                <td>{{ mentor.apellidos}}</td>
								<td>
									{% if mentor.tipoDocumentoIdentidad == 'T.I'%}
											<strong>Tarjeta Identidad</strong>
									{% elseif mentor.tipoDocumentoIdentidad == 'C.C'%}
											<strong>Cedula</strong>
									{% endif %}
								</td>
								<td>{{ mentor.numeroDocumento}}</td>
		            <td>{{ mentor.fechaNacimiento | date('d-m-Y') }}</td>
								<td>{{ mentor.numeroMovil}}</td>
								<td>{{ mentor.tipoMentor}}</td>
								<td>
                  {% if mentor.activo == '1'%}
                      <strong>Activo</strong>
                  {% elseif mentor.activo == '0'%}
                      <strong>Inactivo</strong>
                  {% endif %}
                </td>

                <td class="actions">
                  <a href="#" class="btn btn-sm btn-info">Ver</a>

                  <a href="#" class="btn btn-sm btn-primary">Editar</a>

                  <a href="#" class="btn btn-sm btn-danger btn-delete">Eliminar</a>
                </td>
               </tr>
				        {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
