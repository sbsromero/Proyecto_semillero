{% extends 'AdminBundle:Layout:layoutAdmin.html.twig' %}
{% block body %}
{{ parent() }}
<div class="container">
{% embed "AdminBundle:Shared:navBarAdmin.html.twig" %}
{% block tab_diplomados %}active{% endblock %}
{% endembed %}
<input type="hidden" id="mensajeDiplomados" value="{{app.session.flashbag.get('mensajeDiplomados')|join}}">
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row" style="margin:0px;margin-bottom:20px">
      <div class="col-md-9">
        <div class="form-group form-inline">
          <i class="glyphicon glyphicon-search"></i>
          <input type="text" name="" value="" class="form-control">
        </div>
      </div>
      <div class="col-md-3" align="right">
        <a class="btn btn-default btn-AddDiplomado" data-toggle="modal" data-target="#modalAddDiplomado">Agregar Diplomado</a>
        <!-- <a href="{#{path('addDiplomados')}#}" class="btn btn-default">Agregar Diplomado</a> -->
      </div>
    </div>
    <div class="row" style="margin:0px">
      <div class="table-responsive">
        Total Diplomados: {{ pagination.getTotalItemCount }}
        <table class="table table-striped table-border table-hover table-responsive ">
          <thead style="background-color:#f8f8f8">
            <tr >
              <th rowspan="2" > {{ knp_pagination_sortable(pagination, 'Nombre', 'd.nombre') }} </th>
              <th rowspan="2" > {{ 'Cantidad de Grupos' }} </th>
              <th rowspan="2" > {{ knp_pagination_sortable(pagination, 'Fecha De Creaci√≥n', 'd.fechaCreacion') }} </th>
              <th rowspan="2" style="text-align:center"> {{ knp_pagination_sortable(pagination, 'Estado', 'd.activo') }} </th>
              <th rowspan="1" colspan="3" style="text-align:center">Acciones</th>
            </tr>
            <tr>
              <th rowspan="1" style="text-align:center">Ver</th>
              <th rowspan="1" style="text-align:center">Editar</th>
              <th rowspan="1" style="text-align:center">Eliminar</th>
            </tr>
          </thead>
          <tbody >
            {% for diplomado in pagination %}
            <tr class="color-cells" data-id="{{diplomado.id}}">
              <td id="nombreDiplomado-{{diplomado.id}}" value="{{diplomado.nombre}}">{{diplomado.nombre}}</td>
              <td>{{ '#' }}</td>
              <td>{{ diplomado.fechaCreacion | date('d-m-Y') }}</td>
              <td align="center">
                {% if diplomado.activo == '1'%}
                <button type="button" class="btn btn-success">Activo</button>
                {% else %}
                <button type="button" class="btn btn-default">Inactivo</button>
                {% endif %}
              </td>
              <td align="center">
                <a class="btn btn-sm btn-info btnVerDiplomado">Ver</a>
              </td>
              <td align="center">
                <a class="btn btn-sm btn-primary btn-editDiplomado" data-toggle="modal" data-target="#modalEditDiplomado">Editar</a>
              </td>
              <td align="center">
                <a class="btn btn-sm btn-danger btnDelDiplomado">Eliminar</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div class="navigation">
        {{ knp_pagination_render(pagination) }}
      </div>
    </div>
  </div>
</div>
</div>

<!--Modal agregar diplomado-->
<div class="modal fade" id="modalAddDiplomado">
  <div class="modal-dialog"  style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body body-modal" id ="contentAddDiplomado">

      </div>
    </div>
  </div>
</div>
<!--Modal visualizar diplomado-->
<div class="modal fade" id="modalViewDiplomado">
  <div class="modal-dialog"  style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body body-modal" id ="contentViewDiplomado">

      </div>
    </div>
  </div>
</div>
<!--Modal editar diplomado-->
<div class="modal fade" id="modalEditDiplomado">
  <div class="modal-dialog"  style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body body-modal" id ="contentEditDiplomado">

      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascript %}
{{parent()}}
<script src="{{asset('public/js/diplomado.js')}}"></script>
<script src="{{asset('public/js/bootstrap-datepicker.min.js')}}"></script>
<script src="{{asset('public/js/bootstrap-datepicker.es.min.js')}}" charset="UTF-8"></script>
{% endblock %}
