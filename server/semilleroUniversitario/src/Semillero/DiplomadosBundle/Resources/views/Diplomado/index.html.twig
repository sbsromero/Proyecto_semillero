{% extends 'AdminBundle:Layout:layoutAdmin.html.twig' %}
{% block body %}
{{ parent() }}
<div class="container">
{% embed "AdminBundle:Shared:navBarAdmin.html.twig" %}
{% block tab_diplomados %}active{% endblock %}
{% endembed %}
<input type="hidden" id="mensajeDiplomados" value="{{app.session.flashbag.get('mensajeDiplomados')|join}}">
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row" style="margin:0px;margin-bottom:20px">
      <div class="col-md-9">
        <div class="form-group form-inline">
          <i class="glyphicon glyphicon-search"></i>
          <input type="text" id="queryBusquedaDiplomado" name="" value="" class="form-control">
          <a class="btn btn-default btnMostrarDiplomados" style="border-radius:20px">Mostrar todos</a>
        </div>
      </div>
      <div class="col-md-3" align="right">
        <a class="btn btn-default btn-AddDiplomado" data-toggle="modal" data-target="#modalAddDiplomado">Agregar Diplomado</a>
      </div>
    </div>
    <div class="row" style="margin:0px">
      <div class="table-responsive" id="tabla_diplomados" data-pageCount="{{pageCount}}">
        {% if pagination | length %}
        <table id="tableItemsDiplomados" class="table table-striped table-border table-hover table-responsive tablesorter" style="font-size:14px">
          <thead style="background-color:#f8f8f8">
            <tr >
              <th rowspan="2" style="font-size:14px"> Nombre</th>
              <th rowspan="2" style="font-size:14px"> {{ 'Cantidad de Grupos' }} </th>
              <th rowspan="2" style="font-size:14px"> Fecha de creaci√≥n</th>
              <th rowspan="2" style="text-align:center; font-size:14px">Estado</th>
              <th rowspan="1" colspan="3" style="text-align:center; font-size:14px">Acciones</th>
            </tr>
            <tr>
              <th rowspan="1" style="text-align:center; font-size:14px">Ver</th>
              <th rowspan="1" style="text-align:center; font-size:14px">Editar</th>
              <th rowspan="1" style="text-align:center; font-size:14px">Eliminar</th>
            </tr>
          </thead>
          <tbody >
            {% for diplomado in pagination %}
            <tr class="color-cells" data-id="{{diplomado.id}}">
              <td id="nombreDiplomado-{{diplomado.id}}" value="{{diplomado.nombre}}">{{diplomado.nombre}}</td>
              <td>{{ diplomado.grupos | length }}</td>
              <td>{{ diplomado.fechaCreacion | date('d-m-Y') }}</td>
              <td align="center">
                {% if diplomado.activo %}
                <h3 style="display:none">1</h3>
                <span data-toggle="tooltip" data-original-title="Activo" style="color:green">
                  <i class="glyphicon glyphicon-ok-circle"></i>
                </span>
                {% else %}
                <h3 style="display:none">0</h3>
                <span data-toggle="tooltip" data-original-title="Inactivo" style="color:#f16565">
                  <i class="glyphicon glyphicon-ban-circle"></i>
                </span>
                {% endif %}
              </td>
              <td align="center">
                <a class="btn btn-sm btn-info btnVerDiplomado" data-toggle="modal" data-target="#modalViewDiplomado">Ver</a>
              </td>
              <td align="center">
                <a class="btn btn-sm btn-primary btn-editDiplomado" data-toggle="modal" data-target="#modalEditDiplomado">Editar</a>
              </td>
              <td align="center">
                <a class="btn btn-sm btn-danger btnDelDiplomado">Eliminar</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        {% else %}
        <h3>No se encontraron resultados</h3>
        {% endif %}
      </div>
      <div class="" align="center">
        <ul id="paginationDiplomados" class="pagination-sm"></ul>
      </div>
    </div>
  </div>
 </div>
</div>

<!--Modal agregar diplomado-->
<div class="modal fade" id="modalAddDiplomado">
  <div class="modal-dialog"  style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body body-modal" id ="contentAddDiplomado">

      </div>
    </div>
  </div>
</div>
<!--Modal visualizar diplomado-->
<div class="modal fade" id="modalViewDiplomado">
  <div class="modal-dialog"  style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body body-modal" id ="contentViewDiplomado">

      </div>
    </div>
  </div>
</div>
<!--Modal editar diplomado-->
<div class="modal fade" id="modalEditDiplomado">
  <div class="modal-dialog"  style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body body-modal" id ="contentEditDiplomado">

      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascript %}
{{parent()}}
<script src="{{asset('public/js/diplomado.js')}}"></script>
<script src="{{asset('public/js/bootstrap-datepicker.min.js')}}"></script>
<script src="{{asset('public/js/bootstrap-datepicker.es.min.js')}}" charset="UTF-8"></script>
{% endblock %}
