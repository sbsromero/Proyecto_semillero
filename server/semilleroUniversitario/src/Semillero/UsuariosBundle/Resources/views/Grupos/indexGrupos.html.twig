{% extends 'layout/layout.html.twig' %}

{% block body %}
<div class="" style="webkit-box-shadow: 0px 10px 5px 7px rgba(0,0,0,0.08); -moz-box-shadow: 0px 10px 5px 7px rgba(0,0,0,0.08); box-shadow: 0px 10px 5px 7px rgba(0,0,0,0.08); border-bottom: 10px solid; padding: 30px 0px 30px 0px; background-color: #e7e7e7; margin-bottom: 40px;">
  <div class="" style="position: absolute; right: 10px; top: 15px;">
    <h4>
      <a href="{{path('usuariosLogout')}}">Cerrar sesi√≥n</a>
    </h4>
  </div>
</div>
<div class="container">
  <div class="panel panel-default" style="background-color: #f8f8f8">
    <div class="panel-heading" align="center">

      <div class="row">
        <div class="col-md-2 col-xs-3">
          <div align="center" style="width:100%; height:100%">
            <img alt="logoSemillero" style="height:60px" src="{{asset('public/images/logoSemilleroUniversitario.png')}}">
          </div>
        </div>
        <div class="col-md-8 col-xs-7">
          <h3 class="textBienvenido">Bienvenido {{user.getFullName()}}</h3>
        </div>

      </div>
    </div>
    <div class="panel-body" style="background-color: white; padding-left:120px;padding-right:120px;padding-top:30px">
      <div class="row well" align="center" style="margin:0px auto;padding-top:30px;padding-right:20px;padding-left:20px">
        <p>* Seleccione un grupo de los que tiene asignado para continuar</p>
        <div class="form-group" style="padding-top:10px">
          <form action="{{path('administracionUsuarios')}}" method="get">
            <div class="row">
              <div class="col-xs-12 col-md-3">
                Grupo seleccionado :
              </div>
              <div class="col-xs-12 col-md-9">
                <select id="selectIdGrupo" class="form-control" name="idGrupo" required>
                  <option value="">Seleccione un grupo</option>
                  {% if gruposPorMentor | length %}
                  {% for grupo_mentor in gruposPorMentor %}
                  <option value="{{grupo_mentor.getGrupo().getId()}}">{{grupo_mentor.getGrupo().getDiplomado().getNombre()}} - {{grupo_mentor.getGrupo().getNombre()}} - {{grupo_mentor.getGrupo().getJornada().getNombre()}}</option>
                  {% endfor %}
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="" style="padding-top:20px;">
              <button type="submit" class="btn btn-default btn-usuariosGrupo">Continuar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{#{include('/shared/footerUsuarios.html.twig')}#}

{% endblock %}
{% block javascript %}
{{parent()}}
<script src="{{asset('public/js/usuarios_grupos.js')}}"></script>
{% endblock %}
