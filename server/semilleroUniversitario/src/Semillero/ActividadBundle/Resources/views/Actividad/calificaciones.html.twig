{% extends 'AdminBundle:Layout:layoutAdmin.html.twig' %}
{% block body %}
{{ parent() }}

<div class="container" style="margin-top:20px">
  <div class="panel panel-default">
    <div class="" style="margin-left:200px; margin-right:200px">
      <div class="panel-header" style="padding:15px; padding-bottom:0px" align="center">
        <div class="" style="width:100%; display:table; height:50px; background-color:#f5f5f5">
          <div class="" style="display:table-cell; vertical-align:middle">
            Gestión de calificaciones
          </div>
        </div>
      </div>
      <div class="panel-body" align="center">
        <div class="row">
          <div class="col-md-6" style="padding-right:2px">
            <div class="" style="background-color:#f5f5f5">
              Grupo
            </div>
            <div class="" id="grupoCalif" data-id="{{grupo.getId()}}">
              {{grupo.getNombre()}}
            </div>
          </div>
          <div class="col-md-6" style="padding-left:2px">
            <div class="" style="background-color:#f5f5f5">
              Cupo
            </div>
            <div class="">
              {{grupo.getCupo()}}
            </div>
          </div>
        </div>
        <div class="row" style="">
          <div class="col-md-6" style="padding-right:2px">
            <div class="" style="background-color:#f5f5f5">
              Actividad
            </div>
            <div class="" id="actividad" data-id="{{actividad.getId()}}">
              {{actividad.getNombre()}}
            </div>
          </div>
          <div class="col-md-6" style="padding-left:2px">
            <div class="" style="background-color:#f5f5f5">
              Segmento
            </div>
            <div class="" id="segmento" data-id="{{segmento.getId()}}">
              {{segmento.getNumeroSegmento()}}
            </div>
          </div>
        </div>
        <div class="row" style="margin:0px auto; margin-top:10px">
          <div class="" align="left">
            <ul id="paginadorCalificacion" class="pagination-sm"></ul>
          </div>

          <div class="table-responsive" id="tablaCalificaciones" data-pageCount="{{pageCount}}">
            <table id="tableSemillasCalificacion" class="table table-striped table-border table-hover table-responsive">
              <thead style="background-color:#f5f5f5">
                <tr>
                  <th style="border-right: 2px solid #fff; width: 120px; text-align:center">Identificación</th>
                  <th style="border-right: 2px solid #fff; text-align:center">Nombre</th>
                  <th style="border-right: 2px solid #fff; width: 100px; text-align:center">Nota</th>
                  <th style="width: 100px; text-align:center">Asistencia</th>
                </tr>
              </thead>
              {% if semillas | length %}
              <tbody>
                {% for semilla in semillas %}
                  <tr>
                    <td style="border-right: 2px solid #fff">{{semilla.getNumeroDocumento()}}</td>
                    <td style="border-right: 2px solid #fff">{{semilla.getFullName()}}</td>
                    <td align="center" style="border-right: 2px solid #fff">
                      <input type="text" name="" value="" style="width:50px">
                    </td>
                    <td align="center">
                      <input type="checkbox" name="" value="">
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
              {% endif %}
            </table>

          </div>

          <div class="">
            <a href="#" class="btn btn-success">Guardar</a>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
{% endblock %}
{% block javascript %}
{{parent()}}
<script src="{{asset('public/js/usuarios_actividades.js')}}"></script>
{% endblock %}
