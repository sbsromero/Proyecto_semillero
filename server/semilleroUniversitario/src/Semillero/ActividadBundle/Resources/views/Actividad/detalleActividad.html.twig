<div class="panel panel-default">
  <div class="panel-header">
    <div class="row" style="margin:0px;padding-right: 30px;padding-top: 20px;">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    </div>
  </div>
  {% set role = app.user.getroles()[0] %}
  <div class="panel-body" style="padding:0px">
    <div class="row" style="margin:0px">
      <div class="col-md-6 col-xs-12">
        <div class="form-group">
          <label for="" style="width:100%">Encuentro</label>
          <dd for="" style="width:100%">{{actividad.getEncuentro().getNumeroEncuentro()}}</dd>
        </div>
        <div class="form-group">
          <label for="" style="width:100%">Fecha realización</label>
          <dd for="" style="width:100%">{{actividad.getFechaRealizacion()|date('d-m-Y')}}</dd>
        </div>
        <div class="form-group">
          <label for="" style="width:100%">Actividad</label>
          <dd for="" style="width:100%">{{actividad.getNombre()}}</dd>
        </div>

      </div>
      <div class="col-md-6 col-xs-12">
        <div class="form-group">
          {% if role == "ROLE_SEMILLA"%}
            <label for="" style="width:100%">Asitencia</label>
            <dd style="width:100%">
              {{render(controller('ServicesBundle:Service:getAsistenciaActividadSemilla',{idSemilla:app.user.getId(),idActividad:actividad.getId()}))}}
            </dd>
          {% else %}
            <label for="" style="width:100%">Segmento</label>
            <dd for="" style="width:100%">{{actividad.getEncuentro().getSegmento().getNumeroSegmento()}}</dd>
          {% endif %}
        </div>
        <div class="form-group">
          <label for="" style="width:100%">Tipo de actividad</label>
          <dd for="" style="width:100%">{{actividad.getTipoActividad().getNombre()}}</dd>
        </div>
        <div class="form-group">
          <label for="" style="width:100%">Descripción</label>
          <dd for="" style="width:100%">{{actividad.getDescripcion}}</dd>
        </div>
      </div>

      <div class="col-md-12 col-xs-12">
        <div class="form-group">
          <label for="" style="width:100%">Observaciones</label>
          <textarea class="form-control" rows="5" readonly style="resize:none">{{actividad.getObservacion()}}</textarea>
        </div>
      </div>
    </div>
  </div>
</div>
