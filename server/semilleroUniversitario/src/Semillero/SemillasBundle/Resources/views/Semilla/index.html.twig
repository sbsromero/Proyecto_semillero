{% extends 'AdminBundle:Layout:layoutAdmin.html.twig' %}
{% block body %}
{{ parent() }}
{{ include('SemillasBundle:Semilla:messages/success.html.twig' )}}
<div class="container">
{% embed "AdminBundle:Shared:navBarAdmin.html.twig" %}
{% block tab_semillas %}active{% endblock %}
{% endembed %}
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row" style="margin:0px;margin-bottom:20px">
      <div class="col-md-9">
        <div class="form-group form-inline">
          <i class="glyphicon glyphicon-search"></i>
          <input type="text" name="" value="" class="form-control">
        </div>
      </div>
      <div class="col-md-3" align="right">
        <a href="{{path('addSemillas')}}" class="btn btn-default">Agregar Una Semilla</a>
      </div>
    </div>
    <div class="row" style="margin:0px">
      <div class="table-responsive">
       Total Semillas: {{ pagination.getTotalItemCount }}
        <table class="table table-striped table-border table-hover table-responsive ">
          <thead style="background-color:#f8f8f8">
            <tr >
              <th rowspan="2"> {{ knp_pagination_sortable(pagination, 'Nombre', 's.nombre') }} </th>
              <th rowspan="2"> {{ knp_pagination_sortable(pagination, 'Apellidos', 's.apellidos') }} </th>
              <th rowspan="2"> {{ 'Tipo De Documento' }} </th>
              <th rowspan="2"> {{ knp_pagination_sortable(pagination, 'Número De Documento', 's.numeroDocumento') }} </th>
              <th rowspan="2"> {{ knp_pagination_sortable(pagination, 'Fecha De Nacimiento', 's.fechaNacimiento') }} </th>
              <th rowspan="2"> {{ knp_pagination_sortable(pagination, 'Número Celular', 's.numeroCelular') }} </th>
              <th rowspan="2"> {{ 'Grupo' }} </th>
              <th rowspan="2"> {{ knp_pagination_sortable(pagination, 'FaceBook', 's.isFacebook') }} </th>
              <th rowspan="1" colspan="3" style="text-align:center">Acciones</th>
            </tr>
            <tr>
              <th rowspan="1" style="text-align:center">Ver</th>
              <th rowspan="1" style="text-align:center">Editar</th>
              <th rowspan="1" style="text-align:center">Eliminar</th>
            </tr>
          </thead>
          <tbody >
            {% for semilla in pagination %}
            <tr class="color-cells" data-id="{{semilla.id}}">
              <td>{{ semilla.nombre}}</td>
              <td>{{ semilla.apellidos}}</td>
              <td>{{ semilla.tipoDocumento.nombre }}
              <td id="dniSemilla-{{semilla.id}}" value="{{semilla.numeroDocumento}}">{{ semilla.numeroDocumento}}</td>
              <td>{{ semilla.fechaNacimiento | date('d-m-Y') }}</td>
              <td>{{ semilla.numeroCelular}}</td>
              <td>{{ semilla.grupo.diplomado.nombre}} {{ semilla.grupo.nombre}}</td>
              <td>
                {% if semilla.isFacebook == '1'%}
                <button type="button" class="btn btn-success">Si</button>
                {% else %}
                <button type="button" class="btn btn-default">No</button>
                {% endif %}
              </td>
              <td>
                <a class="btn btn-sm btn-info btnVerSemilla">Ver</a>
              </td>
              <td>
                <a href="{{ path('editSemillas', {numeroDocumento: semilla.numeroDocumento}) }}" class="btn btn-sm btn-primary">Editar</a>
              </td>
              <td>
                <a class="btn btn-sm btn-danger btnDelSemilla">Eliminar</a>
              </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        <div class="navigation">
          {{ knp_pagination_render(pagination) }}
        </div>
      </div>
    </div>
  </div>
</div>

<!--Modal visualizar Semilla -->
<div class="modal fade" id="modalViewSemilla">
  <div class="modal-dialog"  style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body body-modal" id ="contentViewSemilla">

      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascript %}
  {{parent()}}
  <script src="{{asset('public/js/semilla.js')}}"></script>
  <script src="{{asset('public/js/bootstrap-datepicker.min.js')}}"></script>
  <script src="{{asset('public/js/bootstrap-datepicker.es.min.js')}}" charset="UTF-8"></script>
{% endblock %}
